<Style name="text-villages">
<!-- zoom 11 -->
	<Rule>
		&maxscale_zoom11;
		&minscale_zoom11;
		<Filter>([place] = 'village') and ([population] &gt; 1000)</Filter>
		<PointSymbolizer file="symbols-topo/small_town.png"/>
		<TextSymbolizer face-name="DejaVu Sans Condensed" size="10" fill="black" halo-radius="2" halo-fill="rgba(255,255,255,0.8)" placement="point" dx="4" dy="-3">[name]</TextSymbolizer>
	</Rule>


<!-- zoom 12 -->
	<Rule>
		&maxscale_zoom12;
		&minscale_zoom12;
		<Filter>([place] = 'village') and ([population] &gt; 1000)</Filter>
		<TextSymbolizer face-name="DejaVu Sans Condensed" size="12" fill="black" halo-radius="2" halo-fill="rgba(255,255,255,0.8)" placement="point" dx="4" dy="-3">[name]</TextSymbolizer>
	</Rule>
	<Rule>
		&maxscale_zoom12;
		&minscale_zoom12;
		<Filter>([place] = 'village') and not ([population] &gt; 1000)</Filter>
		<TextSymbolizer face-name="DejaVu Sans Condensed" size="10" fill="black" halo-radius="2" halo-fill="rgba(255,255,255,0.8)" placement="point" dx="4" dy="-3">[name]</TextSymbolizer>
	</Rule>
	<Rule>
		&maxscale_zoom12;
		&minscale_zoom12;
		<Filter>([place] = 'suburb') and ([population] &gt; 1000)</Filter>
		<TextSymbolizer face-name="DejaVu Sans Condensed" size="12" fill="black" halo-radius="2" halo-fill="rgba(255,255,255,0.8)" placement="point" >[name]</TextSymbolizer>
	</Rule>


<!-- zoom 13 -->
	<Rule>
		&maxscale_zoom13;
		&minscale_zoom13;
		<Filter>([place] = 'village') and ([population] &gt; 1000)</Filter>
		<TextSymbolizer face-name="DejaVu Sans Condensed" size="13" fill="black" halo-radius="2" halo-fill="rgba(255,255,255,0.8)" placement="point" dx="20" dy="-5">[name]</TextSymbolizer>
	</Rule>
	<Rule>
		&maxscale_zoom13;
		&minscale_zoom13;
		<Filter>([place] = 'village') and not ([population] &gt; 1000)</Filter>
		<TextSymbolizer face-name="DejaVu Sans Condensed" size="12" opacity="0.9" fill="black" halo-radius="2" halo-fill="rgba(255,255,255,0.8)" placement="point" dx="10" dy="-4">[name]</TextSymbolizer>
	</Rule>
	<Rule>
		&maxscale_zoom13;
		&minscale_zoom13;
		<Filter>([place] = 'suburb') and ([population] &gt; 1000)</Filter>
		<TextSymbolizer face-name="DejaVu Sans Condensed" size="13" fill="black" halo-radius="2" halo-fill="rgba(255,255,255,0.8)" placement="point">[name]</TextSymbolizer>
	</Rule>
	<Rule>
		&maxscale_zoom13;
		&minscale_zoom13;
		<Filter>([place] = 'suburb') and not ([population] &gt; 1000)</Filter>
		<TextSymbolizer face-name="DejaVu Sans Condensed" size="12" opacity="0.9" fill="black" halo-radius="2" halo-fill="rgba(255,255,255,0.8)" placement="point">[name]</TextSymbolizer>
	</Rule>


<!-- zoom 14 -->
	<Rule>
		&maxscale_zoom14;
		&minscale_zoom14;
		<Filter>([place] = 'village') and ([population] &gt; 1000)</Filter>
		<TextSymbolizer face-name="DejaVu Sans Condensed" size="15" fill="black" halo-radius="2" halo-fill="rgba(255,255,255,0.8)" placement="point" dx="50" dy="-7">[name]</TextSymbolizer>
	</Rule>
	<Rule>
		&maxscale_zoom14;
		&minscale_zoom14;
		<Filter>([place] = 'village') and not ([population] &gt; 1000)</Filter>
		<TextSymbolizer face-name="DejaVu Sans Condensed" size="13" fill="black" halo-radius="2" halo-fill="rgba(255,255,255,0.8)" placement="point" dx="25" dy="-7">[name]</TextSymbolizer>
	</Rule>

	<Rule>
		&maxscale_zoom14;
		&minscale_zoom14;
		<Filter>(([place] = 'suburb') or ([place] = 'neighbourhood')) and ([population] &gt; 1000)</Filter>
		<TextSymbolizer face-name="DejaVu Sans Condensed" size="15" fill="black" halo-radius="2" halo-fill="rgba(255,255,255,0.8)" placement="point">[name]</TextSymbolizer>
	</Rule>
	<Rule>
		&maxscale_zoom14;
		&minscale_zoom14;
		<Filter>([place] = 'suburb') and not ([population] &gt; 1000)</Filter>
		<TextSymbolizer face-name="DejaVu Sans Condensed" size="13" fill="black" halo-radius="2" halo-fill="rgba(255,255,255,0.8)" placement="point">[name]</TextSymbolizer>
	</Rule>

	<Rule>
		&maxscale_zoom14;
		&minscale_zoom14;
		<Filter>([place] = 'hamlet' or [place] = 'isolated_dwelling')</Filter>
		<TextSymbolizer face-name="DejaVu Sans Condensed" size="9" fill="black" halo-radius="2" halo-fill="rgba(255,255,255,0.8)" placement="point" dx="13" dy="-7">[name]</TextSymbolizer>
	</Rule>

<!-- zoom 15-16 -->
	<Rule>
		&maxscale_zoom15;
		&minscale_zoom16;
		<Filter>(([place] = 'village') or ([place] = 'suburb') or ([place] = 'neighbourhood')) and ([population] &gt; 1000)</Filter>
		<TextSymbolizer face-name="DejaVu Sans Condensed" size="18" fill="black" halo-radius="2" halo-fill="rgba(255,255,255,0.8)" character-spacing="5" placement="point">[name]</TextSymbolizer>
	</Rule>
	<Rule>
		&maxscale_zoom15;
		&minscale_zoom16;
		<Filter>(([place] = 'village') or ([place] = 'suburb') or ([place] = 'neighbourhood')) and not ([population] &gt; 1000)</Filter>
		<TextSymbolizer face-name="DejaVu Sans Condensed" size="20" fill="black" halo-radius="2" halo-fill="rgba(255,255,255,0.8)" character-spacing="5" placement="point">[name]</TextSymbolizer>
	</Rule>

	<Rule>
		&maxscale_zoom15;
		&minscale_zoom16;
		<Filter>([place] = 'hamlet' or [place] = 'isolated_dwelling')</Filter>
		<TextSymbolizer face-name="DejaVu Sans Condensed" size="20" fill="black" halo-radius="2" halo-fill="rgba(255,255,255,0.8)" dx="20" placement="point">[name]</TextSymbolizer>
	</Rule>
	<Rule>
		&maxscale_zoom15;
		&minscale_zoom16;
		<Filter>([place] = 'locality')</Filter>
		<TextSymbolizer face-name="DejaVu Sans Oblique" size="20" fill="black" halo-radius="1" halo-fill="rgba(255,255,255,0.8)" placement="point">[name]</TextSymbolizer>
	</Rule>
</Style>
