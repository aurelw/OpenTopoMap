<Style name="text-peaks">
	<Rule>
		&maxscale_zoom13;
		&minscale_zoom16;
		<Filter>([natural] = 'peak' or [natural] = 'volcano') and ([name] = null)</Filter>
		<TextSymbolizer face-name="DejaVu Sans Oblique" size="25" fill="black" halo-radius="2" halo-fill="rgba(255,255,255,0.7)" placement="point" dy="3">[ele]</TextSymbolizer>
	</Rule>
	<Rule>
		&maxscale_zoom12;
		&minscale_zoom12;
		<Filter>([natural] = 'peak' or [natural] = 'volcano') and not ([name] = null)</Filter>
		<TextSymbolizer face-name="DejaVu Sans Oblique" size="25" fill="black" halo-radius="2" halo-fill="rgba(255,255,255,0.7)" placement="point" dy="3">[name]</TextSymbolizer>
	</Rule>
	<Rule>
		&maxscale_zoom13;
		&minscale_zoom16;
		<Filter>([natural] = 'peak' or [natural] = 'volcano') and not ([name] = null)</Filter>
		<TextSymbolizer face-name="DejaVu Sans Oblique" size="25" fill="black" halo-radius="2" halo-fill="rgba(255,255,255,0.7)" placement="point" dy="3">[name]</TextSymbolizer>
		<TextSymbolizer face-name="DejaVu Sans Oblique" size="25" fill="black" halo-radius="2" halo-fill="rgba(255,255,255,0.7)" placement="point" dy="13">[ele]</TextSymbolizer>
	</Rule>
</Style>
